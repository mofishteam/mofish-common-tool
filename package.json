{
  "name": "mofish-common-tool",
  "version": "0.0.4",
  "description": "A Toolbox for mofish plugins.",
  "main": "index.js",
  "scripts": {
    "dev": "./node_modules/.bin/nodemon",
    "dev:babel": "babel-node demo/index.js",
    "test:visual": "./node_modules/.bin/browser-sync start --server --files \"testReport/*\"",
    "build": "babel src --out-dir dist",
    "build:min": "webpack --config ./webpack.conf.js",
    "build:all": "npm run build && npm run build:min",
    "lint": "./node_modules/.bin/eslint src test",
    "test": "./node_modules/.bin/electron-mocha test --renderer -t 10000 -s 5000 --bail --require @babel/register --reporter mochawesome --reporter-options reportDir=testReport,reportFilename=report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mofishteam/mofish-common-tool.git"
  },
  "keywords": [
    "mofish",
    "common",
    "tool"
  ],
  "files": [
    "dist",
    "src",
    "test"
  ],
  "author": "wszxdhr@126.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mofishteam/mofish-common-tool/issues"
  },
  "homepage": "https://github.com/mofishteam/mofish-common-tool#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.7",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "electron-mocha": "^8.2.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.0",
    "mochawesome": "^5.0.0",
    "nodemon": "^2.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "electron": "^8.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "verbose": true,
    "watch": [
      "src",
      "test"
    ],
    "execMap": {
      "js": "npm run dev:babel"
    },
    "exec": "npm run dev:babel",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
